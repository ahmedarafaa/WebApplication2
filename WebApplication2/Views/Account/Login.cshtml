@using WebApplication2.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="Medirec" />
    <meta name="description" content="Medirec Connecting Doctors with his Patients">
    <meta name="author" content="Medirec">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/MediContent/vendor/bootstrap/css/bootstrap.css"
    <link rel="stylesheet" href="~/MediContent/vendor/animate/animate.css">

    <link rel="stylesheet" href="~/MediContent/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/MediContent/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/MediContent/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/MediContent/css/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/MediContent/css/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/MediContent/css/custom.css">

    <!-- Head Libs -->
    <script src="~/MediContent/vendor/modernizr/modernizr.js"></script>

</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo float-left">
                <img src="~/MediContent/img/Logo.png" height="54" alt="Porto Admin" />
            </a>

            <div class="panel card-sign">
                <div class="card-title-sign mt-3 text-right">
                    <h2 class="title text-uppercase font-weight-bold m-0"><i class="fa fa-user mr-1"></i> Sign In</h2>
                </div>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="card-body">
                        <form action="index.html" method="post">
                            <div class="form-group mb-3">
                                <label>Username</label>
                                <div class="input-group input-group-icon">
                                    @*<input name="username" type="text" class="form-control form-control-lg" />*@
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                                    <span class="input-group-addon">
                                        <span class="icon icon-lg">
                                            <i class="fa fa-user"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <div class="clearfix">
                                    @*<label class="float-left">Password</label>*@
                                    @*<a class="float-right"></a>*@
                                    <p class="float-right"><a>@Html.ActionLink("Lost Password?", "ForgotPassword")</a></p>

                                </div>
                                <div class="input-group input-group-icon">
                                    @*<input name="pwd" type="password" class="form-control form-control-lg" />*@
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                                    <span class="input-group-addon">
                                        <span class="icon icon-lg">
                                            <i class="fa fa-lock"></i>
                                        </span>
                                    </span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-8">
                                    <div class="checkbox-custom checkbox-default">
                                        @*<input id="RememberMe" name="rememberme" type="checkbox" />*@
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        <label for="RememberMe">Remember Me</label>
                                    </div>
                                </div>
                                <div class="col-sm-4 text-right">
                                    <button type="submit" class="btn btn-primary mt-2">Sign In</button>
                                </div>
                            </div>

                            @*<span class="mt-3 mb-3 line-thru text-center text-uppercase">
                            <span>or</span>
                        </span>

                        <div class="mb-1 text-center">
                            <a class="btn btn-facebook mb-3 ml-1 mr-1" href="#">Connect with <i class="fa fa-facebook"></i></a>
                            <a class="btn btn-twitter mb-3 ml-1 mr-1" href="#">Connect with <i class="fa fa-twitter"></i></a>
                        </div>*@

                            <p class="text-center">Don't have an account yet? <a>@Html.ActionLink("Sign Up!", "Register")</a></p>

                        </form>
                    </div>
                }
            </div>

            <p class="text-center text-muted mt-3 mb-3">&copy; Copyright @DateTime.Now.Year. All Rights Reserved to Medirec.</p>
            
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/MediContent/vendor/jquery/jquery.js"></script>
    <script src="~/MediContent/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/MediContent/vendor/popper/umd/popper.min.js"></script>
    <script src="~/MediContent/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/MediContent/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/MediContent/vendor/common/common.js"></script>
    <script src="~/MediContent/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/MediContent/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="~/MediContent/vendor/jquery-placeholder/jquery-placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/MediContent/js/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/MediContent/js/custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/MediContent/js/theme.init.js"></script>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}